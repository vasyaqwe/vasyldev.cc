{
   "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "noUncheckedIndexedAccess": true,
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "baseUrl": ".",
      "paths": {
         "@/*": ["./src/*"]
      }
   },
   "include": ["src"],
   "exclude": ["node_modules"]
}
